<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="1000dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/activity_ui"
    tools:context=".ui"
    android:background="@android:color/background_dark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1000dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_width="300dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Lubbock"
                android:id="@+id/location"
                android:gravity="center|right"
                android:textColor="#ffffff" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@mipmap/location"
                android:background="#020202"
                android:paddingRight="1dp"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@mipmap/apartments"
                android:paddingLeft="8dp"
                android:contextClickable="false"
                android:clickable="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:id="@+id/imageView6"
                android:src="@mipmap/dining"
                android:layout_gravity="center"
                android:clickable="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Apartments"
                android:id="@+id/apartment"
                android:password="false"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Dining"
                android:id="@+id/dining"
                android:textAlignment="center"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@mipmap/education"
                android:paddingLeft="8dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:id="@+id/imageView7"
                android:src="@mipmap/emergency"
                android:layout_gravity="center"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Education"
                android:id="@+id/education"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:id="@+id/emergency"
                android:textAlignment="center"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@mipmap/entertainment"
                android:paddingLeft="8dp"
                android:clickable="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:id="@+id/imageView8"
                android:layout_gravity="center"
                android:src="@mipmap/tourism"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Entertainment"
                android:id="@+id/entertainment"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Tourism"
                android:id="@+id/tourism"
                android:textAlignment="center"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@mipmap/transportation"
                android:paddingLeft="15dp"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Transport"
                android:id="@+id/transport"
                android:textAlignment="center"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
